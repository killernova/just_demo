<div class="row nav-row">
  <div class="col-xs-12 nav-body">
    <div class="title">Love Blog</div>
    <div class="search">
      <input type="text" class="search-input" name="q" value="<%= params[:q] %>">
      <div class="text">Search</div>
    </div>
    <% if current_user %>
      <div class="user"><%= current_user.email %></div>
      <%= link_to 'Log out', session_path(current_user), method: :delete %>
    <% end %>
  </div>
</div>